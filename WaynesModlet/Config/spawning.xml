<configs>

<!-- Biome spawning -->
<set xpath="/spawning/biome/spawn[contains(@entitygroup, 'ZombiesAll')]/@maxcount">24</set>
<set xpath="/spawning/biome/spawn[contains(@entitygroup, 'ZombiesNight')]/@maxcount">24</set>
<set xpath="/spawning/biome/spawn[contains(@entitygroup, 'WildGameForest')]/@maxcount">2</set>
<set xpath="/spawning/biome/spawn[contains(@entitygroup, 'Zombie')]/@respawndelay">14</set>
<set xpath="/spawning/biome[@name='wasteland']/spawn[contains(@entitygroup, 'Zombie')]/@respawndelay">1</set>

<!-- POI spawning -->
<set xpath="/spawning/entityspawner[@name='SpawnExtraSmall']/day/property[@name='TotalAlive' or @name='TotalPerWave']/@value">6</set>
<set xpath="/spawning/entityspawner[@name='SpawnSmall']/day/property[@name='TotalAlive' or @name='TotalPerWave']/@value">10</set>
<set xpath="/spawning/entityspawner[@name='SpawnMedium']/day/property[@name='TotalAlive' or @name='TotalPerWave']/@value">16</set>
<set xpath="/spawning/entityspawner[@name='SpawnLarge']/day/property[@name='TotalAlive' or @name='TotalPerWave']/@value">24</set>
<set xpath="/spawning/entityspawner[@name='SpawnExLarge']/day/property[@name='TotalAlive' or @name='TotalPerWave']/@value">32</set>

<!-- RoamingHordeSpawnDay -->
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnDay']/day[@value='7']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">7</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnDay']/day[@value='14']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">14</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnDay']/day[@value='21']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">21</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnDay']/day[@value='24']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">24</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnDay']/day[@value='26']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">24</set>
<append xpath="/spawning/entityspawner[@name='RoamingHordeSpawnDay']">
	<day value="*">
		<property name="EntityGroupName" value="ZombiesAll" />
		<property name="Time" value="Any" />
		<property name="DelayBetweenSpawns" value="1" />
		<property name="TotalAlive" value="24" />
		<property name="TotalPerWave" value="20,30" />
	</day>
</append>

<!-- RoamingHordeSpawnNight -->
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='6']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">6</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='7']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">7</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='7']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">8</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='13']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">13</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='14']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">14</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='15']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">15</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='20']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">20</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='21']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">21</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='22']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">22</set>
<set xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']/day[@value='23']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">23</set>
<append xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']">
	<day value="*">
		<property name="EntityGroupName" value="ZombiesAll" />
		<property name="Time" value="Any" />
		<property name="DelayBetweenSpawns" value="1" />
		<property name="TotalAlive" value="24" />
		<property name="TotalPerWave" value="20,30" />
	</day>
</append>

<!-- Screamer spawns HordeMeterDynamicSpawnDay -->
<set xpath="/spawning/entityspawner[@name='HordeMeterDynamicSpawnDay']/day[@value='28,60']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">16</set>
<set xpath="/spawning/entityspawner[@name='HordeMeterDynamicSpawnDay']/day[@value='61,90']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">20</set>
<set xpath="/spawning/entityspawner[@name='HordeMeterDynamicSpawnDay']/day[@value='*']/property[@name='TotalAlive' or @name='TotalPerWave']/@value">24</set>

</configs>